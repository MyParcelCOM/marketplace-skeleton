{
    "name": "myparcelcom/marketplace-skeleton",
    "type": "project",
    "description": "Skeleton project for MyParcel.COM marketplace integrations",
    "keywords": [
        "myparcel.com",
        "integrations"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-bcmath": "*",
        "crisu83/php-conversion": "^0.5.2",
        "curiosity26/odataquery": "^1.0",
        "guzzlehttp/guzzle": "^7.8",
        "jonahgeorge/jaeger-client-php": "1.5.0",
        "laravel/framework": "^11.0",
        "laravel/tinker": "^2.9",
        "myclabs/php-enum": "^1.7",
        "myparcelcom/concurrency-safe-migrations": "^0.1",
        "myparcelcom/marketplace-commons": "dev-feature/MP-7141-refactor-exception-handler",
        "ramsey/uuid": "^4.3",
        "rollbar/rollbar-laravel": "^8.0",
        "viison/address-splitter": "^0.3.4"
    },
    "require-dev": {
        "brianium/paratest": "^7.2",
        "fakerphp/faker": "^1.23",
        "laravel/sail": "^1.27",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "stable",
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi",
            "@php -r \"file_put_contents('.gitignore', str_replace('composer.lock', '', file_get_contents('.gitignore')));\""
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
